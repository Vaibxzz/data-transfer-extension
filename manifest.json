{
  "manifest_version": 3,
  "name": "Kosh",
  "version": "1.0.0",
  "description": "Kosh data transfer extension",
  "options_page": "options.html",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Kosh"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "https://kosh-backend-1094058263345.us-central1.run.app/*",
    "https://*.w3schools.com/*"
  ]
}