{
  "manifest_version": 3,
  "name": "Advanced Data Transfer",
  "version": "2.0",
  "description": "Transfers data from one webpage to another with robust error handling and user configuration.",
  "permissions": ["scripting", "storage"],
  "host_permissions": [
    "https://www.w3schools.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js"
  }
}