<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Kosh - Authentication</title>
  <link rel="stylesheet" href="auth.css" />
  <!-- firebase config must define window.FIREBASE_CONFIG -->
  <script src="firebase-config.js" defer></script>

  <!-- compat SDKs (defer) -->
  <script defer src="https://www.gstatic.com/firebasejs/9.22.2/firebase-app-compat.js"></script>
  <script defer src="https://www.gstatic.com/firebasejs/9.22.2/firebase-auth-compat.js"></script>
  <script defer src="https://www.gstatic.com/firebasejs/9.22.2/firebase-firestore-compat.js"></script>

  <!-- init (exposes window.__KOSH__) -->
  <script src="firebase-init-and-auth-wiring.js" defer></script>

  <!-- app -->
  <script src="signup.js" defer></script>
</head>
<body>
  <div class="page-bg"></div>
  <div class="auth-container">
    <div class="auth-card">
      <div class="brand-area">
        <!-- put this where your logo should be -->
      <img id="koshLogo" src="assets/kosh-logo.png" alt="Kosh Logo"
           style="width:160px;height:auto;object-fit:contain; "
          onerror="this.onerror=null; this.src='data:image/svg+xml;utf8,<svg xmlns=%22http://www.w3.org/2000/svg%22 width=%22160%22 height=%2240%22><text x=%2250%25%22 y=%2250%25%22 dominant-baseline=%22middle%22 text-anchor=%22middle%22 font-family=%22Arial%22 font-size=%2222%22 fill=%22%23111%22>KOSH</text></svg>';">
        
      </div>

      <div id="login-section" class="section">
        <h2 class="headline">Log in to your Account</h2>
        <div class="input-wrap">
          <input id="login-email" type="email" placeholder="Email Address" />
        </div>
        <div class="input-wrap password-container">
          <input id="login-password" type="password" placeholder="Password" />
          <button type="button" class="password-toggle" aria-label="toggle password">üëÅÔ∏è</button>
        </div>
        <a class="forgot" href="#">Forgot password?</a>
        <button class="gradient-btn login-btn">Log In</button>

        <div class="divider"><span>OR</span></div>

        <button class="social-btn google-btn">
          <img src="https://www.svgrepo.com/show/303108/google-icon-logo.svg" 
               alt="Google" class="social-icon" />
          Continue with Google
        </button>
        <button class="social-btn outlook-btn">
          <img src="https://upload.wikimedia.org/wikipedia/commons/4/44/Microsoft_logo.svg" 
               alt="Microsoft" class="social-icon" />
          Continue with Microsoft
        </button>

        <div class="signup-footer">
          Don‚Äôt have an account? <a href="#" id="show-signup">Sign up</a>
        </div>
      </div>

      <div id="signup-section" class="section" style="display:none;">
        <h2 class="headline">Create your Account</h2>
        <div class="input-wrap">
          <input id="signup-name" type="text" placeholder="Full Name" />
        </div>
        <div class="input-wrap">
          <input id="signup-email" type="email" placeholder="Email Address" />
        </div>
        <div class="input-wrap password-container">
          <input id="signup-password" type="password" placeholder="Password" />
          <button type="button" class="password-toggle-signup" aria-label="toggle password">üëÅÔ∏è</button>
        </div>
        <div class="input-wrap password-container">
          <input id="signup-password-confirm" type="password" placeholder="Confirm Password" />
          <button type="button" class="password-toggle-signup-confirm" aria-label="toggle password">üëÅÔ∏è</button>
        </div>
        <button class="gradient-btn register-btn">Sign Up</button>

        <div class="divider"><span>OR</span></div>

        <button class="social-btn google-btn">
          <img src="https://www.svgrepo.com/show/303108/google-icon-logo.svg" alt="google" />
          Continue with Google
        </button>
        <button class="social-btn outlook-btn">
          <img src="https://upload.wikimedia.org/wikipedia/commons/4/44/Microsoft_logo.svg" alt="outlook" />
          Continue with Microsoft
        </button>

        <div class="signup-footer">
          Already have an account? <a href="#" id="show-login">Log in</a>
        </div>
      </div>
    </div>
  </div>
</body>
</html>
